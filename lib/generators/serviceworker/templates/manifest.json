{
  "name": "My Progressive Rails App",
  "short_name": "Progressive",
  "start_url": "/",
  "icons": [
  <%% Rails.configuration.serviceworker.icon_sizes.map.with_index { |s| "#{s}x#{s}" }.each do |dim, i| %>
    {
      "src": "<%%= image_path "serviceworker-rails/heart-#{dim}.png" %>",
      "sizes": "<%%= dim %>",
      "type": "image/png",
    },
  <%% end %>
  ],
  "theme_color": "#000000",
  "background_color": "#FFFFFF",
  "display": "fullscreen",
  "orientation": "portrait"
}
